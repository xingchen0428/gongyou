<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:text="工单状态"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="5dp"
        android:background="#A0A0A0" />

    <LinearLayout
        android:id="@+id/ll_content_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_process0"
            style="@style/WidgetMessageProcessTextView" />

        <ImageView
            android:id="@+id/iv_process1"
            style="@style/WidgetMessageProcessImageView" />

        <TextView
            android:id="@+id/tv_process1"
            style="@style/WidgetMessageProcessTextView" />

        <ImageView
            android:id="@+id/iv_process2"
            style="@style/WidgetMessageProcessImageView" />

        <TextView
            android:id="@+id/tv_process2"
            style="@style/WidgetMessageProcessTextView" />

        <ImageView
            android:id="@+id/iv_process3"
            style="@style/WidgetMessageProcessImageView" />

        <TextView
            android:id="@+id/tv_process3"
            style="@style/WidgetMessageProcessTextView" />

        <ImageView
            android:id="@+id/iv_process4"
            style="@style/WidgetMessageProcessImageView" />

        <TextView
            android:id="@+id/tv_process4"
            style="@style/WidgetMessageProcessTextView" />

        <ImageView
            android:id="@+id/iv_process5"
            style="@style/WidgetMessageProcessImageView" />

        <TextView
            android:id="@+id/tv_process5"
            style="@style/WidgetMessageProcessTextView" />

        <ImageView
            android:id="@+id/iv_process6"
            style="@style/WidgetMessageProcessImageView" />

        <TextView
            android:id="@+id/tv_process6"
            style="@style/WidgetMessageProcessTextView" />

        <ImageView
            android:id="@+id/iv_process7"
            style="@style/WidgetMessageProcessImageView" />

        <TextView
            android:id="@+id/tv_process7"
            style="@style/WidgetMessageProcessTextView" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="#A0A0A0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#c9c9c9" />

</LinearLayout>